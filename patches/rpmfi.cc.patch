+uint32_t
+rpmfiFileCCSID(rpmfi fi, int ix)
+{
+    if (fi == NULL) return 0;
+    rpmfiles rf = fi->files;
+    if (rf == NULL) return 0;
+    if (ix < 0 || ix >= (int)rpmfilesFC(rf)) return 0;
+    return rf->fccsids ? (uint32_t) rf->fccsids[ix] : 0;
